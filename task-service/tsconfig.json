{
  "compilerOptions": {
    "target": "es2020", // Or a suitable target version
    "module": "commonjs", // Or "esnext" if you're using modules
    "outDir": "./dist",   // Output directory for compiled JavaScript
    "rootDir": "./src",  // Root directory of your TypeScript source files
    "strict": true,      // Enable strict type checking (recommended)
    "esModuleInterop": true, // Handle CommonJS/ES module interop
    "skipLibCheck": true,   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Enforce consistent casing
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}